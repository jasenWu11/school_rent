.container {
  height: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  padding-top: 73rpx;
  padding-bottom: 40rpx;
}

.top-container {
  position: fixed;
  top: 0;
  width: 100%;
  height: 160rpx;
  border-bottom: 1px solid #8d8d89;
  background: #feffff;
  display: flex;
  flex-direction: row;
  z-index: 100;
}

.top-goods-image {
  width: 108rpx;
  height: 128rpx;
  margin: 15rpx 30rpx 0 30rpx;
}

.top-image {
  width: 100%;
  height: 100%;
}

.top-goods-info {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  width: 350rpx;
  height: 160rpx;
  
}

.goods-name {
  color: #9d9d9d;
  font-size: 36rpx;
  width: 350rpx;
  max-width: 350rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods-price {
  color: #fe472d;
  margin-top: 25rpx;
  font-size: 30rpx;
}

.goods-price text {
  font-size: 40rpx;
  color: #fe472d;
}

.buy {
  
  height: 160rpx;
  /* background: pink; */
  margin-left: 40rpx;
  text-align: center;
  line-height: 160rpx;
}

.buy-btn {
  padding: 10rpx 30rpx 10rpx 30rpx;
  border: #f45b43 1.5px solid;
  border-radius: 10rpx;
  font-weight: 700;
  color: #f45b43
}