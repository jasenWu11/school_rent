/* pages/goods/goods.wxss */
.rented-image {
  position: absolute;
  top: 30rpx;
  right: 50rpx;
  width: 128rpx;
  height: 128rpx;
}

.sellerInfo {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
  /* background: #000; */
  line-height: 100rpx;
  /* justify-content: center; */
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
  margin-top: 10rpx;
  margin-left: 30rpx;
}

.nickName {
  margin-left: 16rpx;
  font-size: 36rpx;
}

.prompt {
  color: red;
  font-size: 32rpx;
  margin-left: 40rpx;
  line-height: 100rpx;
}

.price-container {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  line-height: 100rpx;
}

.price-container1 {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  line-height: 40rpx;
}

.price-container text {
  color: red;
}

.price-container1 text {
  color: red;
}

.price-rmb {
  margin-left: 30rpx;
  margin-right: 4rpx;
}

.price {
  font-size: 48rpx;
}

.title-container {
  width: 100%;
  
}

.title {
  font-size: 42rpx;
  font-weight: 300;
  line-height: 50rpx;
  display: inline-block;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.desc-container {
  width: 100%;
  margin-top: 20rpx;
  color: #817e7ec9;
  line-height: 56rpx;
}

.desc {
  display: inline-block;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.picture-container {
  width: 100%;
  margin-top: 30rpx;
  margin-bottom: 100rpx;
}

.picture-content {
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.picture {
  width: 100%;
  margin-bottom: 30rpx;
}

.bottom-container {
  position:fixed; 
  /* justify-content: flex-end; */
  bottom:0;
  width: 100%;
  height: 100rpx;
  background:#fff;
  /* border-top: 1px solid #8d8d8d; */
  box-shadow: 0px -2px 2px rgb(236, 235, 235);
  display: flex;
  flex-direction: row;
}

.bottom-container2 {
  position:fixed; 
  justify-content: flex-end;
  bottom:0;
  width: 100%;
  height: 100rpx;
  background:#fff;
  /* border-top: 1px solid #8d8d8d; */
  box-shadow: 0px -2px 2px rgb(236, 235, 235);
  display: flex;
  flex-direction: row;
}

.collection {
  margin-left: 40rpx;
  width: 80rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  /* background: #000; */
}

.collection-icon {
  margin-top: 4rpx;
  width: 54rpx;
  height: 54rpx;
}

.collection text {
  margin-top: 2rpx;
  font-size: 26rpx;
}

.share {
  display: flex;
  flex-direction: column;
  width: 80rpx;
  height: 100rpx;
}

.share-icon {
  margin-top: 4rpx;
  width: 54rpx;
  height: 54rpx;
}

.sharebtn {
  display: flex;
  flex-direction: column;
  background: #fff;
  margin-top: 2rpx;
}

.sharebtn::after {
  border: none;
}

.share-title {
  margin-top: 10rpx;
  margin-bottom: 2rpx;
  height: 20rpx;
  line-height: 20rpx;
  font-size: 26rpx;
  color: #555;
}

.area-btn {
  width: 450rpx;
  height: 100rpx;
  /* background: green; */
  margin-left: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.talk {
  margin-top: 15rpx;
  margin-left: 30rpx;
  width: 180rpx;
  height: 70rpx;
  background: #ffa901;
  color: #fff;
  text-align: center;
  line-height: 70rpx;
}

.talk text {
  color: #fff;
  font-size: 30rpx;
}

.talk-btn {
  width: 100%;
  height: 100%;
}

.buy {
  margin-top: 15rpx;
  width: 180rpx;
  height: 70rpx;
  background: #f44326;
  color: #fff;
  text-align: center;
  line-height: 70rpx;
}

.buy text {
  color: #fff;
  font-size: 30rpx;
}

.buy-btn {
  width: 100%;
  height: 100%;
}

.btn1 {
  line-height: 100rpx;
  text-align: center;
  width: 225rpx;
  height: 100rpx;
  background: #b4282d;
  margin-right: 30rpx;
}

.btn2 {
  line-height: 100rpx;
  text-align: center;
  width: 225rpx;
  height: 100rpx;
  background: #f48f18;
}

.btn1 text, .btn2 text {
  color: white;
}